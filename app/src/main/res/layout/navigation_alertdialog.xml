<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="350dp"
              android:layout_height="match_parent"
             android:background="@drawable/login_linearl_shape"
            >
    <TableLayout>
        <TableRow android:background="@drawable/login_shape">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我要去哪"
                android:textSize="25sp"
                android:textColor="#ffffff"
                android:layout_marginLeft="120dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                />
            <ImageView
                android:id="@+id/img_close"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/close_change"
                android:layout_marginLeft="60dp"
                android:clickable="true"
                />
        </TableRow>
    </TableLayout>

    <!-- 所有列都可以被拉伸-->
    <TableLayout  >
        <TableRow>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车位查询"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="7dp"
                android:drawableTop="@drawable/love_car_now_condition"
                android:background="@drawable/mylovecar_btn"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="周边信息"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="7dp"
                android:drawableTop="@drawable/image_rim_info"
                android:background="@drawable/mylovecar_btn"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一键导航"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="5dp"
                android:drawableTop="@drawable/image_navigate"
                android:background="@drawable/mylovecar_btn"
                />
        </TableRow>
        <TableRow>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="行车记录仪"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="15dp"
                android:paddingTop="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="8dp"
                android:drawablePadding="8dp"
                android:drawableTop="@drawable/image_record2"
                android:background="@drawable/mylovecar_btn"
                />
        </TableRow>
    </TableLayout>

</TableLayout>