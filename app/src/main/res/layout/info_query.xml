<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout android:orientation="horizontal"
                  android:layout_width="fill_parent"
                  android:layout_height="50dp"
                  android:background="@drawable/login_shape"
                  android:gravity="center_vertical"
        >
        <Button
            android:id="@+id/btn_infoQuery_clickback"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_click_change"
            />
        <TextView
            android:id="@+id/textView_carDiagnose_mainmenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="信息查询"
            android:textSize="25sp"
            android:textColor="#ffffff"
            android:layout_marginLeft="80dp"
            />

        <Button
            android:id="@+id/bt_carDiagnos_history"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:text="清空列表"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:layout_marginLeft="50dp"
            android:background="@drawable/cardiagnose_history"
            />

    </LinearLayout>
    <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#fff"
                >
        <LinearLayout
            android:id="@+id/linear_carType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingLeft="25dp"
            android:paddingBottom="10dp"
            android:clickable="true"
            >
            <TextView
                    android:id="@+id/btn_car_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全部类型"
                    android:textSize="16sp"
                    />
            <ImageView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                       android:scaleType="fitCenter"
                       android:src="@drawable/push_info_down"
                       android:layout_marginLeft="18dp"
                       android:layout_marginTop="6dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingLeft="25dp"
            android:paddingBottom="10dp"
            >
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="全部车辆"
                      android:textSize="16sp"
                />
            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:scaleType="fitCenter"
                       android:src="@drawable/push_info_down"
                       android:layout_marginLeft="18dp"
                       android:layout_marginTop="6dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingLeft="25dp"
            android:paddingBottom="10dp"
            >
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="时间降序"
                      android:textSize="16sp"
                />

            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:scaleType="fitCenter"
                       android:src="@drawable/push_info_down"
                       android:layout_marginLeft="18dp"
                       android:layout_marginTop="6dp"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>